//how to download image from the website 
import java.awt.image.BufferedImage;
import java.io.File;
import java.net.*;
import java.io.IOException;
import javax.imageio.ImageIO;

public class imge
{
	public static void main(String[] args)
	{
		String extension=".jpg";
		BufferedImage image=null;
		try
		{
			URL url= new URL("https://upload.wikimedia.org/wikipedia/commons/c/c9/Moon.jpg");
			image=ImageIO.read(url);
			ImageIO.write(image,"jpg",new File("F:\\oopssss" + extension));
			
			System.out.println("write is successfull");	
		}
		catch(IOException e)
		{
			e.printStackTrace();
			System.out.println("error!");
		}
	}
}
